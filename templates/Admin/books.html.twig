    </div>
    {% for book in books %}
        <article class="book">
            {% if book.title %}
                <h1>{{ book.title }}</h1>
            {% endif %}
            <div class="lien">
                <a class="btn" href={{ path('admin_book', {'id': book.id }) }}>Voir le d√©tail du livre</a>
                <a class="btn" href="{{ path ('admin_update_book',{'id':book.id }) }}">Modifier ce livre </a>
